@{
    Layout = null;
}
<script type="text/javascript">
    setTimeout(function () {
        $("#alertaError").addClass("hide");
    },5000)

</script>

<div id="alertaError" class="alert alert-danger fade in" style="padding: 7px;margin-bottom:5px">
    <i class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></i>
    <span>@ViewBag.Error</span>
</div>